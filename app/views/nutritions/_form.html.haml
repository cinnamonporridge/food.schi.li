= simple_form_for nutrition do |f|
  .flex.mb-5
    .w-full
      = f.input :name, input_html: { class: 'w-full' }

  .flex.mb-3
    .w-full
      .flex
        %div{ class: 'w-2/3' }
          = label_tag :unit, nil, class: 'text-xs'
        %div{ class: 'w-1/3' }
          = f.input :unit,
                    collection: nutrition.decorate.units_collection,
                    include_blank: false,
                    label: false,
                    input_html: { class: 'w-full py-0' }

  .flex.mb-3
    .w-full
      .flex
        %div{ class: 'w-2/3' }
          = label_tag :kcal, nil, class: 'text-xs'
        %div{ class: 'w-1/3' }
          = f.input :kcal,
                    label: false,
                    input_html: { class: 'w-full py-0' }

  .flex.flex-wrap.mb-3
    .w-full.mb-1
      .flex
        %div{ class: 'w-2/3' }
          = label_tag :carbs, nil, class: 'text-xs'
        %div{ class: 'w-1/3' }
          = f.input :carbs,
                    label: false,
                    input_html: { class: 'w-full py-0' }
    .w-full
      .flex
        %div{ class: 'w-2/3' }
          = label_tag :carbs_sugar_part, nil, class: 'text-xs text-gray-500'
        %div{ class: 'w-1/3' }
          = f.input :carbs_sugar_part,
                    label: false,
                    input_html: { class: 'w-full py-0' }

  .flex.mb-3
    .w-full
      .flex
        %div{ class: 'w-2/3' }
          = label_tag :protein, nil, class: 'text-xs'
        %div{ class: 'w-1/3' }
          = f.input :protein,
                    label: false,
                    input_html: { class: 'w-full py-0' }

  .flex.flex-wrap.mb-3
    .w-full.mb-1
      .flex
        %div{ class: 'w-2/3' }
          = label_tag :fat, nil, class: 'text-xs'
        %div{ class: 'w-1/3' }
          = f.input :fat,
                    label: false,
                    input_html: { class: 'w-full py-0' }

    .w-full
      .flex
        %div{ class: 'w-2/3' }
          = label_tag :fat_saturated, nil, class: 'text-xs text-gray-500'
        %div{ class: 'w-1/3' }
          = f.input :fat_saturated,
                    label: false,
                    input_html: { class: 'w-full py-0' }

  .flex.mb-3
    .w-full
      .flex
        %div{ class: 'w-2/3' }
          = label_tag :fiber, nil, class: 'text-xs'
        %div{ class: 'w-1/3' }
          = f.input :fiber,
                    label: false,
                    input_html: { class: 'w-full py-0' }

  .flex.mb-3
    .w-full
      .flex
        %div{ class: 'w-2/3' }
          = label_tag :vegan, nil, class: 'text-xs'
        %div{ class: 'w-1/3 text-right' }
          = f.input :vegan,
                    label: false

  .flex.flex-wrap.my-6
    .w-full
      = f.submit nil, class: 'f-button w-full'
    .w-full
      = link_to 'Cancel', nutritions_path, class: 'shy-link text-sm'
