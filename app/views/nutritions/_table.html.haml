- if nutritions_table.dig(:meals).present?
  .flex.my-4
    .w-full
      .flex.border-b.border-gray-400
        %div{ class: 'w-1/3' }
        %div{ class: 'w-1/6 text-3xs text-right' } kcal
        %div{ class: 'w-1/6 text-3xs text-right' } Carbs
        %div{ class: 'w-1/6 text-3xs text-right' } Protein
        %div{ class: 'w-1/6 text-3xs text-right' } Fat

      - nutritions_table.each do |section, rows|
        .flex.border-b.border-gray-400
          .w-full.my-2
            - rows.each do |row|
              .flex.flex-wrap.text-3xs
                %div{ class: 'w-1/3' }= row[0]
                %div{ class: 'w-1/6 text-right' }= row[1]
                %div{ class: 'w-1/6 text-right' }= row[2]
                %div{ class: 'w-1/6 text-right' }= row[3]
                %div{ class: 'w-1/6 text-right' }= row[4]
- else
  .text-gray-400.text-center.tracking-wider.text-2xs No meals: no nutritions.


