= simple_form_for form, url: [:my, form.meal.journal_day, form.meal] do |f|
  .flex.flex-wrap.mb-4
    = f.input :recipe_id, as: :hidden
    .w-full.mb-2
      = f.input :portion_name, input_html: { list: :portion_id_list, class: 'w-full' }
      %datalist#portion_id_list
        = options_for_select PortionDecorator.portions_collection
    .w-full.mb-2
      = f.input :amount_in_measure, input_html: { class: 'w-full' }
    .w-full.mb-2
      = f.input :measure, collection: IngredientDecorator.measures_collection, include_blank: false, input_html: { class: 'w-full p-2 border border-green-300' }

  .flex.flex-wrap.mt-6
    .w-full
      = f.submit nil, class: 'f-button f-button-green w-full'
    .w-full
      - cancel_path = [:my, form.meal.journal_day]
      .my-5
        = link_to 'Cancel', cancel_path, class: 'shy-link text-xs'
