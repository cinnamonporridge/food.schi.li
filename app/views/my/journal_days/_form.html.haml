= simple_form_for journal_day, url: [:my, journal_day] do |form|
  .flex.flex-wrap.mb-4
    .w-full
      = form.input :date, label: false, input_html: { class: 'w-full border border-green-300 p-2 my-2 text-xs' }

  .flex.flex-wrap.mt-6
    .w-full
      = form.submit nil, class: 'f-button f-button-green w-full'
    .w-full
      - cancel_path = journal_day.persisted? ? my_journal_day_path(journal_day) : my_journal_days_path
      .mt-4
        = link_to 'Cancel', cancel_path, class: 'shy-link text-xs'
