= form_with(model: form, data: { turbo: false }, class: 'day-partition') do |f|
  .bg-white.rounded.overflow-hidden.shadow.divide-y.divide-gray-200
    .pt-2.pb-4.px-4.flex.flex-col.gap-y-4
      .flex.flex-col
        = f.label :name, class: 'label'
        = f.text_field :name, class: 'input', placeholder: 'Breakfast, Lunch, Dinner...'
        = render 'layouts/forms/field_errors', errors: f.object.errors, key: :name

      .flex.flex-col
        = f.label :position, 'Move to position', class: 'label'
        = f.select :position, form.move_to_position_options, {}, { class: 'input' }
        = render 'layouts/forms/field_errors', errors: f.object.errors, key: :position

    .p-4.flex.flex-col.gap-y-2
      - text = f.object.new_record? ? 'Add day partition' : 'Update day partition'
      = render SubmitButtonComponent.new(text, f.object)

      .text-center
        = link_to 'Cancel', day_partitions_path, class: 'shy-link text-xs'
