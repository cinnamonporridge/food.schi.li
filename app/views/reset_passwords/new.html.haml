.flex.flex-col.gap-y-8
  %h1 Set new password

  = form_with(model: @form, url: reset_passwords_url, data: { turbo: false }) do |f|
    .bg-white.rounded.overflow-hidden.shadow.flex.flex-col.gap-y-2.py-4
      .px-4.flex.flex-col.gap-y-2
        = f.label :password, 'New password', class: 'label'
        = f.password_field :password, placeholder: 'Choose wisely', class: 'input'
        = render 'layouts/forms/field_errors', errors: f.object.errors, key: :password

      .px-4.flex.flex-col.gap-y-2
        = f.hidden_field :challenge
        = f.button type: :submit, class: 'button gap-x-2' do
          .h-4.w-4
            = render HeroiconComponent.new(:'lock-open')
          Set password

        .text-center
          = link_to 'Cancel', root_path, class: 'shy-link text-xs'
