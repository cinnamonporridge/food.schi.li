- if flash.present?
  %div{ 'data-controller': 'dismissable' }
    .flash.bg-cyan-200.rounded.text-sm.px-4.py-2.text-gray-700.mb-8.shadow.flex.items-center
      .grow.flash-messages
        - flash.each do |_type, message|
          = message
      .shrink-0.flex.items-center
        %button.text-gray-500.hover:text-gray-600{ 'data-action': 'dismissable#dismiss' }
          .h-4.w-4
            .sr-only Dismiss
            = raw heroicon :x
