%header
  %nav.main-nav.bg-green-700
    .w-screen.max-w-screen-md.mx-auto.px-4.md:px-0
      .flex.items-center.justify-between.space-x-8.h-16
        .shrink-0
          .h-8.w-8.text-white
            = render FontAwesomeIconComponent.new(:'carrot-duotone')
        - if @current_user
          .hidden.sm:flex.sm:w-full.sm:items-center
            .grow
              .flex.gap-x-2
                = link_to journal_days_path, class: "nav-link #{nav_link_current_classes(journal_days_path)} flex items-center gap-x-2" do
                  = render HeroiconComponent.new(:calendar)
                  = JournalDay.model_name.human(count: 0)

                = link_to recipes_path, class: "nav-link #{nav_link_current_classes(recipes_path)} flex items-center gap-x-2" do
                  = render HeroiconComponent.new(:'book-open')
                  = Recipe.model_name.human(count: 0)

                = link_to foods_path, class: "nav-link #{nav_link_current_classes(foods_path)} flex items-center gap-x-2" do
                  = render HeroiconComponent.new(:'chart-pie')
                  = Food.model_name.human(count: 0)
          .shrink-0.flex.gap-x-4
            = link_to settings_path, class: 'text-green-500 hover:text-green-200 transition text-sm flex items-center gap-x-2' do
              = render HeroiconComponent.new(:cog)
              = t('.settings')
            = button_to logout_path, method: :delete, class: 'text-green-500 hover:text-green-200 transition text-sm flex items-center gap-x-2' do
              = render HeroiconComponent.new(:logout)
              = t('.sign_out')

    #mobile-menu.sm:hidden
      .bg-green-400.flex.flex-col.divide-y.divide-green-300
        .grid.grid-cols-3
          = link_to journal_days_path, class: "nav-link #{nav_link_current_classes(journal_days_path)} flex items-center gap-x-4" do
            = render HeroiconComponent.new(:calendar)
            = JournalDay.model_name.human(count: 0)

          = link_to recipes_path, class: "nav-link #{nav_link_current_classes(recipes_path)} flex items-center gap-x-4" do
            = render HeroiconComponent.new(:'book-open')
            = Recipe.model_name.human(count: 0)

          = link_to foods_path, class: "nav-link #{nav_link_current_classes(foods_path)} flex items-center gap-x-4" do
            = render HeroiconComponent.new(:'chart-pie')
            = Food.model_name.human(count: 0)

  = render 'layouts/flash'
