
= form_with url: form_url, method: :get, local: true do |f|
  .flex.text-xs
    %div{ class: 'w-2/3' }
      = f.text_field :search_query,
                     placeholder: 'Search',
                     value: params[:search_query],
                     class: 'w-full py-1 px-2 text-2xs'
    %div{ class: 'w-1/3' }
      = f.submit 'Search', class: 'text-green-900 w-full py-1 f-button shadow-none bg-green-300 text-2xs'
