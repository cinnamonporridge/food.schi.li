%h1 Recipes
= link_to 'New Recipe', new_recipe_path, class: 'primary button'

.vertical-space-xl.search
  .grid-x
    .cell.small-12.medium-6
      = form_with url: recipes_path, method: :get, local: true do |f|
        .input-group
          = f.text_field :search_query, class: 'input-group-field', placeholder: 'Search', value: params[:search_query]
          .input-group-button
            = f.submit 'Search', class: 'button'

.vertical-space-xl= paginate @recipes

= render 'recipes/index', recipes: @recipes

.vertical-space-xl= paginate @recipes
