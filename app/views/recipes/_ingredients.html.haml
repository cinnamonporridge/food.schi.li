- if ingredients.present?
  .flex.mb-4
    .w-full
      %ul#ingredients_list
        - ingredients.each do |ingredient|
          %li
            %div{ 'data-controller': 'toggleable' }
              .flex.w-full.py-2
                .w-full.grid.grid-cols-12.text-xs
                  .col-span-7.text-left
                    = button_tag class: 'text-green-500 hover:text-green-600 flex items-start gap-x-1', 'data-action': 'toggleable#toggle' do
                      = ingredient.portion.decorate.name_with_nutrition
                      = render 'icons/vegan', vegan: ingredient.portion.nutrition.vegan?

                  .col-span-2.text-gray-300.text-right
                    = ingredient.decorate.quantity
                  .col-span-3.text-right
                    = ingredient.decorate.rounded_amount_with_unit_abbrevation
              .hidden{ 'data-toggleable-target': 'toggleable' }
                .flex.flex-col.sm:flex-row.gap-2
                  = link_to 'Edit',
                            edit_recipe_ingredient_path(ingredient.recipe, ingredient),
                            class: 'f-button f-button-green w-full rounded'
                  = button_to 'Delete',
                            recipe_ingredient_path(ingredient.recipe, ingredient),
                            method: :delete,
                            data: { confirm: 'Are you sure?' },
                            class: 'w-full text-center rounded text-xs bg-gray-50 border p-2 text-gray-400 hover:text-red-500 transition hover:border-red-300'
