server {
  listen 443 ssl;
  server_name {{ item['primary_domains'] | join(' ') }};
  root /var/www/{{ app_name }}/application/public;
  client_max_body_size 4G;
  keepalive_timeout 5;
  access_log /var/log/nginx/access.{{ app_name }}.log;

  ssl_certificate /etc/letsencrypt/live/{{ item['primary_domains'][0] }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ item['primary_domains'][0] }}/privkey.pem;

  location /websocket {
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "Upgrade";
    #proxy_set_header Host $host;
    proxy_pass http://{{ app_name }};
    break;
  }

  location ~ ^/assets/ {
    root /var/www/{{ app_name }}/application/public;
    gzip_static on;
    expires max;
    add_header Cache-Control public;
    add_header ETag "";
    break;
  }

  location / {
    try_files $uri @app;
  }

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header Connection "";
    proxy_http_version 1.1;
    proxy_redirect off;
    proxy_send_timeout 3600;
    proxy_read_timeout 3600;
    proxy_pass http://{{ app_name }};
  }
}
